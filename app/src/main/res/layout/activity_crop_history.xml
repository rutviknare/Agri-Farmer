<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/home_background_image">

    <TextView
        android:layout_width="401dp"
        android:layout_height="75dp"
        android:elevation="20dp"
        android:padding="12dp"
        android:text="Recent Result"
        android:fontFamily="@font/acme"
        android:textAlignment="center"

        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold"
        app:flow_horizontalAlign="center" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_crop_history" />

    <androidx.cardview.widget.CardView
        android:layout_width="390dp"
        android:layout_height="500dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardBackgroundColor="@color/green"
        app:cardCornerRadius="50dp"
        app:cardElevation="20dp">

        <TextView
            android:id="@+id/startdate"
            android:layout_width="300dp"
            android:layout_height="47dp"
            android:layout_marginStart="40dp"
            android:text="Start Date:"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/acme"
            android:textColor="@color/black"
            android:textSize="12pt"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/duration"
            android:layout_width="300dp"
            android:layout_height="47dp"
            android:layout_marginStart="40dp"
            android:text="Duration:"
            android:textColor="@color/black"
            android:textSize="12pt"
            android:textStyle="bold"
            android:fontFamily="@font/acme"

            android:layout_marginTop="60dp"/>
        <TextView
            android:id="@+id/district"
            android:layout_width="300dp"
            android:layout_height="47dp"
            android:layout_marginStart="40dp"
            android:text="District:"
            android:fontFamily="@font/acme"

            android:textColor="@color/black"
            android:textSize="12pt"
            android:textStyle="bold"
            android:layout_marginTop="110dp"/>
        <TextView
            android:id="@+id/ph"
            android:layout_width="300dp"
            android:layout_height="47dp"
            android:layout_marginStart="40dp"
            android:text="pH Value:"
            android:textColor="@color/black"
            android:textSize="12pt"
            android:fontFamily="@font/acme"

            android:textStyle="bold"
            android:layout_marginTop="160dp"/>

        <TextView
            android:layout_width="400dp"
            android:layout_height="47dp"
            android:layout_marginStart="0dp"
            android:text="Best Suitable Crops"
            android:textColor="@color/black"
            android:fontFamily="@font/acme"

            android:gravity="center"
            android:textSize="12pt"
            android:textStyle="bold"
            android:layout_marginTop="220dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="101dp"
                android:layout_height="150dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="290dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="50dp"
                >

                <ImageView
                    android:id="@+id/firstimage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    />

                <TextView
                    android:id="@+id/firstheading"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="100dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="101dp"
                android:layout_height="150dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="290dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="50dp"
                >

                <ImageView
                    android:id="@+id/secondimage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                     />

                <TextView
                    android:id="@+id/secondheading"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="100dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="101dp"
                android:layout_height="150dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="290dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="50dp"
                >

                <ImageView
                    android:id="@+id/thirdimage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                     />

                <TextView
                    android:id="@+id/thirdheading"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="100dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>


            </androidx.cardview.widget.CardView>


        </LinearLayout>



    </androidx.cardview.widget.CardView>



</RelativeLayout>
